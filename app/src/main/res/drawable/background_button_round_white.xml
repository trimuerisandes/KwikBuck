<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#DFDFDF"
    tools:targetApi="lollipop">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="0dip" android:color="@color/background" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="0dip" android:color="#ffffff" />
            <solid android:color="#ffffff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="0dip" android:color="#DFDFDF" />
            <gradient android:angle="-90" android:startColor="@color/background" android:endColor="@color/background" />
        </shape>
    </item>
</selector>