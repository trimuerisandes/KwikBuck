<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_demi_bold"
            android:layout_centerHorizontal="true"
            android:text="@string/new_user_signup"
            android:textColor="@color/text"
            android:textSize="25sp"
            android:layout_margin="25dp"/>


        <TextView
            android:id="@+id/sub1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_demi_bold"
            android:text="@string/email"
            android:textColor="@color/subText"
            android:layout_below="@+id/title"
            android:textSize="15sp"
            android:layout_marginHorizontal="25dp"/>

        <LinearLayout
            android:id="@+id/lyt_email"
            android:layout_below="@id/sub1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/edittext_background">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/avenirnext_demi_bold"
                android:background="@null"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_awesome_check"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sub2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_demi_bold"
            android:text="@string/password"
            android:textColor="@color/subText"
            android:textSize="15sp"
            android:layout_below="@+id/lyt_email"
            android:layout_marginHorizontal="25dp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/lyt_pwb"
            android:layout_below="@id/sub2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/edittext_background">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/avenirnext_demi_bold"
                android:background="@null"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_awesome_eye_slash"/>

        </LinearLayout>

        <TextView
            android:id="@+id/sub3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_demi_bold"
            android:text="@string/confirm_password"
            android:textColor="@color/subText"
            android:textSize="15sp"
            android:layout_below="@+id/lyt_pwb"
            android:layout_marginHorizontal="25dp" />

        <LinearLayout
            android:id="@+id/lyt_confirpwd"
            android:layout_below="@id/sub3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/edittext_background">

            <EditText
                android:id="@+id/edt_confirpwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:fontFamily="@font/avenirnext_demi_bold"
                android:background="@null"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_awesome_eye"/>

        </LinearLayout>





    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/lyt_confirpwd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_signup"
        android:src="@null"
        android:adjustViewBounds="true"
        android:text="Sign Up"
        android:textSize="20sp"
        android:fontFamily="@font/avenirnext_bold"
        android:textColor="@color/background"
        android:layout_marginHorizontal="16dp"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_signup"
        android:layout_marginTop="30.5dp"
        android:layout_marginBottom="41.15dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/divender" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/div"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="25dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_twitter" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_facebook_f" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_ionic_logo_google" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_apple" />

    </LinearLayout>


</RelativeLayout>
</ScrollView>