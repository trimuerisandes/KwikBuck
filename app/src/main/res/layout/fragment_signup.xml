<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="25dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_demi_bold"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/new_user_signup"
        android:textColor="@color/text"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_demi_bold"
        android:text="@string/email"
        android:textColor="@color/subText"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/edt_email"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/edt_email" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/sub1"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:background="@drawable/edittext_background"/>


    <TextView
        android:id="@+id/sub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_demi_bold"
        android:text="@string/password"
        android:textColor="@color/subText"
        android:textSize="15sp"
        android:layout_below="@+id/edt_email"
        android:layout_alignStart="@+id/edt_email"
        android:layout_alignLeft="@+id/edt_email"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/edt_password"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/sub2"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@drawable/edittext_background"/>


    <TextView
        android:id="@+id/sub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenirnext_demi_bold"
        android:text="@string/confirm_password"
        android:textColor="@color/subText"
        android:textSize="15sp"
        android:layout_below="@+id/edt_password"
        android:layout_alignStart="@+id/edt_email"
        android:layout_alignLeft="@+id/edt_email" />

    <EditText
        android:id="@+id/edt_confirpwd"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/sub3"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@drawable/edittext_background"/>





    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_confirpwd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_signup"
        android:src="@null"
        android:adjustViewBounds="true"
        android:text="Sign Up"
        android:textSize="20sp"
        android:fontFamily="@font/avenirnext_bold"
        android:textColor="@color/background"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/btn_signup"
        android:layout_alignStart="@+id/btn_signup"
        android:layout_alignEnd="@+id/btn_signup"
        android:layout_marginTop="30.5dp"
        android:layout_marginBottom="41.15dp"
        android:background="@color/divender" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_signup"
        android:layout_alignLeft="@+id/btn_signup">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_twitter" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_facebook_f" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_ionic_logo_google" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_apple" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="706dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>