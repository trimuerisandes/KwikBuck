<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_photo"
            app:civ_border_color="#fff"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello again,"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:fontFamily="@font/avenirnext_bold" />

            <TextView
                android:id="@+id/verifed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirnext_bold"
                android:text="Andrew"
                android:textColor="@color/text"
                android:textSize="30sp"
                android:layout_marginVertical="6dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This isnâ€™t me"
                android:fontFamily="@font/avenirnext_demi_bold"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/selectedTabLayout"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/edt_password"
        android:text="Password"
        android:textSize="15sp"
        android:fontFamily="@font/avenirnext_demi_bold"/>

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_signup"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:padding="15dp"

        android:background="@drawable/edittext_background" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_signup"
        android:src="@null"
        android:textSize="20sp"
        android:fontFamily="@font/avenirnext_bold"
        android:textColor="@color/background"
        android:textAllCaps="false"
        android:text="Sign In" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:fontFamily="@font/avenirnext_demi_bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/selectedTabLayout"/>



    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/navigation"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="41.15dp"
        android:background="@color/divender" />


        <Button
            android:id="@+id/button_face_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_face_login"
            android:fontFamily="@font/avenirnext_bold"
            android:textSize="20sp"
            android:textColor="@color/selectedTabLayout"
            android:textAllCaps="false"
            android:text="Login with Face ID" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_twitter" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_facebook_f" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_ionic_logo_google" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40.1dp"
            android:background="@drawable/icon_awesome_apple" />

    </LinearLayout>



</RelativeLayout>