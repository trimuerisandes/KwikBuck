<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo &amp; Video"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_photo_camera"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/subText"
            android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_copy"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/subText"
                android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create an offer"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_package"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/subText"
                android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Location"
                android:padding="15dp"
                android:drawableLeft="@drawable/ic_share"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/subText"
                android:drawablePadding="16dp"/>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_add"
        android:layout_marginLeft="15dp">


    </FrameLayout>


</LinearLayout>
