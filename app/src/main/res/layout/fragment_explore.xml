<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/background"
        android:contentInsetStart="10dp"
        android:contentInsetLeft="10dp"
        android:contentInsetRight="10dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="15dp"
        app:contentInsetLeft="10dp"
        app:contentInsetRight="10dp"
        app:contentInsetStart="10dp"

        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">


            <TextView
                android:id="@+id/title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button_back"
                android:fontFamily="@font/avenirnext_bold"
                android:layout_centerVertical="true"
                android:text="Explore"
                android:textColor="@color/text"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/button_notif"
                android:layout_toLeftOf="@id/button_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_awesome_bell"
                android:padding="16dp"
                />

            <ImageView
                android:id="@+id/button_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_shopping_cart"
                android:padding="16dp"
                />


            <LinearLayout
                android:id="@+id/notif_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/button_shopping_cart"
                android:background="@drawable/rectangle_2737"
                android:gravity="center"
                android:layout_alignRight="@id/button_shopping_cart">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/avenirnext_bold"
                    android:textSize="9sp"
                    android:text="2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/button_notif"
                android:background="@drawable/rectangle_2737"
                android:gravity="center"
                android:layout_alignRight="@id/button_notif">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/background"
                    android:layout_marginBottom="3dp"
                    android:textSize="9sp"
                    android:fontFamily="@font/avenirnext_bold"
                    android:text="2"/>
            </LinearLayout>




        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/online_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/background"
        android:layout_below="@id/toolbar"
        android:clipToPadding="false"
        android:padding="20dp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:background="@drawable/button_edge"
               android:text="All"
               android:layout_marginRight="8dp"
               android:fontFamily="@font/avenirnext_bold"
               android:textColor="@color/subText"
               android:textSize="14sp"
               android:textAllCaps="false"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/button_edge"
               android:text="Deals"
               android:layout_marginRight="8dp"
               android:fontFamily="@font/avenirnext_bold"
               android:textColor="@color/subText"
               android:textSize="14sp"
               android:textAllCaps="false"/>



           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/button_edge"
               android:text="Devices"
               android:layout_marginRight="8dp"
               android:fontFamily="@font/avenirnext_bold"
               android:textColor="@color/subText"
               android:textSize="14sp"
               android:textAllCaps="false"/>



           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/button_edge"
               android:text="All"
               android:fontFamily="@font/avenirnext_bold"
               android:textColor="@color/subText"
               android:textSize="14sp"
               android:textAllCaps="false"/>







       </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/online_bar"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/group_3005"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="25dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="5dp"
                                        android:layout_marginTop="30dp"
                                        android:fontFamily="@font/avenirnextltpro_bold"
                                        android:text="FEATURED ITEMS"
                                        android:textColor="@color/colorYellow"
                                        android:textSize="18dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenirnextltpro_bold"
                                        android:text="BEST DEALS UP"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="22dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/avenirnextltpro_bold"
                                        android:text="TO 80% OFF"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="22dp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="300dp"
                                    android:layout_height="113dp"
                                    android:src="@drawable/image_shoe_hd" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenirnextltpro_bold"
                    android:text="Products"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/group_300553"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="25dp"
                                android:gravity="top|center"
                                android:layout_gravity="center"
                                android:layout_marginBottom="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginTop="30dp"
                                    android:fontFamily="@font/avenirnext_demibold"
                                    android:text="Flash Sales"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:background="@drawable/rectangle_count">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/pink"
                                            android:fontFamily="@font/avenirnextltpro_bold"
                                            android:textSize="14dp"
                                            android:text="0"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginHorizontal="3dp"
                                        android:background="@drawable/rectangle_count">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/pink"
                                            android:fontFamily="@font/avenirnextltpro_bold"
                                            android:textSize="14dp"
                                            android:text="0"/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:textColor="@color/colorWhite"
                                        android:fontFamily="@font/avenirnextltpro_bold"
                                        android:textSize="16dp"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginHorizontal="3dp"
                                        android:background="@drawable/rectangle_count">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/pink"
                                            android:fontFamily="@font/avenirnextltpro_bold"
                                            android:textSize="14dp"
                                            android:text="0"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:background="@drawable/rectangle_count">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/pink"
                                            android:fontFamily="@font/avenirnextltpro_bold"
                                            android:textSize="14dp"
                                            android:text="0"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/image_iphone_small" />

                            <LinearLayout
                                android:layout_width="171dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="45dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:fontFamily="@font/avenirnext_demibold"
                                    android:text="8 Sold"
                                    android:textColor="@color/colorGray"
                                    android:textSize="13dp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="10dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp"
                                        android:background="@drawable/rectangle_2867" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:background="@drawable/rectangle_load_light" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/avenirnextltpro_bold"
                                    android:text="USD 360.00"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_grid_2"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/image_iphone_small" />

                            <LinearLayout
                                android:layout_width="171dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="45dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:fontFamily="@font/avenirnext_demibold"
                                    android:text="8 Sold"
                                    android:textColor="@color/colorGray"
                                    android:textSize="13dp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="10dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="10dp"
                                        android:background="@drawable/rectangle_2867" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:background="@drawable/rectangle_load_light" />
                                </RelativeLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/avenirnextltpro_bold"
                                    android:text="USD 360.00"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>
