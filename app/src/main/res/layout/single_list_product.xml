<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"


    app:cardCornerRadius="20dp"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">
    <ImageView
        android:id="@+id/image_product"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/image_shoe" />

    <TextView
        android:id="@+id/title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_product"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/nike_trainers"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_product"
        android:gravity="center">

        <RatingBar
            android:id="@+id/rating_bar"
            style="@style/ProductRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textSize="7sp"
            android:layout_marginRight="8dp"
            android:text="245" />
    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
