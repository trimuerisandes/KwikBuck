<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Orders"
            android:padding="15dp"
            android:drawableLeft="@drawable/icon_feather_file_text"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text"
            android:drawablePadding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Delivery"
            android:padding="15dp"
            android:drawableLeft="@drawable/icon_awesome_car_alt"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text"
            android:drawablePadding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Order"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_box_package"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text"
            android:drawablePadding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hide Order"
            android:padding="15dp"
            android:drawableLeft="@drawable/icon_ionic_md_close"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text"
            android:drawablePadding="16dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_button">


    </FrameLayout>


</LinearLayout>
