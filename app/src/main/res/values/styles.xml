    <style name="MyCustomTabText.Explore" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenirnext_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenirnext_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabText.Messages" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenirnext_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyCustomTabText.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenirnext_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProductRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_start</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
    </style>

    <style name="ProfileRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star_profile</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="BlueRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_blue</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>

    <style name="BottomNavTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/avenir_medium</item>
    </style>

</resources>